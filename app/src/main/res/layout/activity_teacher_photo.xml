<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/southBlue"
    tools:context="com.example.marta.blueteeth.TeacherPhoto">



    <TextView
        android:id="@+id/textView6"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Profile Photo?"
        android:textColor="@color/southWhite"
        android:textSize="50sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textBox3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/take_pic_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Take Photo"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible"
        android:onClick="testMethod" />

    <TextView
        android:id="@+id/textBox3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="Click the button to take a photo for
                    your profile."
        android:textColor="@color/southWhite"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textBox4"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnCamera"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Otherwise click Next"
        android:textColor="@color/southWhite"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/next_btn2"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/textBox4"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:fontFamily="sans-serif"
        android:linksClickable="false"
        android:onClick="testMethod"
        android:text="Next"
        android:textColor="@color/southWhite"
        android:textSize="24sp"
        android:visibility="visible" />


</RelativeLayout>