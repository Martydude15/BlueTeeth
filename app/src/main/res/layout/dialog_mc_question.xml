<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/mctitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Multiple Choice Question"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/southBlue"/>

    <TextView
        android:id="@+id/mcquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text="Question will go here"
        android:textColor="@color/southRed"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/choicebtn1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="Choice 1"
        android:textColor="@color/southWhite"
        android:background="@color/southBlue"
        />

    <Button
        android:id="@+id/choicebtn2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Choice 2"
        android:textColor="@color/southWhite"
        android:background="@color/southRed"
        />

    <Button
        android:id="@+id/choicebtn3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Choice 3"
        android:textColor="@color/southWhite"
        android:background="@color/southRed"
        />

    <Button
        android:id="@+id/choicebtn4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Choice 4"
        android:textColor="@color/southWhite"
        android:background="@color/southBlue"
        />

    <Button
        android:id="@+id/sendbtn2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Send"
        android:textColor="@color/southWhite"
        android:background="@color/southRed"/>

    <Button
        android:id="@+id/cancelbtn3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Cancel"
        android:textColor="@color/southWhite"
        android:background="@color/southBlue"/>

</LinearLayout>