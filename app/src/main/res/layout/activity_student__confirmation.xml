<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/southBlue"
    android:visibility="visible"
    tools:context="com.example.marta.blueteeth.Student_Confirmation">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        android:text="Your attendance has been submitted!"
        android:textAlignment="center"
        android:textColor="@color/southWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/return_to_home"
        android:text="Return to homepage"
        android:textColor="@color/southWhite"
        android:onClick="testMethod"
        />
</RelativeLayout>
