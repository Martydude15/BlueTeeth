<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/southBlue"
    android:visibility="visible"
    tools:context="com.example.marta.blueteeth.StudentHomeActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:id="@+id/textBox"
        android:background="@drawable/student_connect_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:cursorVisible="true"
        android:hint="Class Name"
        android:paddingLeft="15dp">
    </EditText>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textBox"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_login_button_with_text2"
        android:linksClickable="false"
        android:onClick="testMethod"
        android:visibility="visible"
        android:contentDescription="TODO" />

</RelativeLayout>