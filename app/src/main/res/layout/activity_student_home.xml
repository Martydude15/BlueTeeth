<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/southBlue"
    android:visibility="visible"
    tools:context="com.example.marta.blueteeth.StudentHomeActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:id="@+id/textBox"
        android:background="@drawable/student_connect_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:cursorVisible="true"
        android:hint="Class Name"
        android:paddingLeft="15dp">
    </EditText>


    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_button"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:linksClickable="false"
        android:onClick="testMethod"
        android:text="Connect"
        android:textSize="24sp"
        android:visibility="visible" />
</RelativeLayout>