<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/southBlue"
    tools:context="com.example.marta.blueteeth.Student_Activity_Step1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="133dp"
        android:text="Step 1"
        android:textColor="@color/southWhite"
        android:textSize="36sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnCamera"

        android:layout_width="250dp"
        android:layout_height="60dp"

        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/take_pic_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Take Picture"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible"
        android:onClick="cameraClick"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Please take a picture of yourself in class. "
        android:textColor="@color/southWhite"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

</RelativeLayout>
